# Azure Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Azure AD B2C (Public - exposed to client)
NEXT_PUBLIC_AZURE_AD_B2C_TENANT_NAME=your-tenant-name
NEXT_PUBLIC_AZURE_AD_B2C_CLIENT_ID=your-b2c-client-id
NEXT_PUBLIC_AZURE_AD_B2C_POLICY_NAME=B2C_1_signupsignin

# Azure AD B2C (Server-side)
AZURE_AD_B2C_CLIENT_SECRET=your-b2c-client-secret

# Azure Custom Vision
AZURE_CUSTOM_VISION_ENDPOINT=https://your-region.api.cognitive.microsoft.com/
AZURE_CUSTOM_VISION_PREDICTION_KEY=your-prediction-key
AZURE_CUSTOM_VISION_PROJECT_ID=your-project-id
AZURE_CUSTOM_VISION_ITERATION_NAME=your-iteration-name

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=skin-images

# Azure Cosmos DB
AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_KEY=your-cosmos-key
AZURE_COSMOS_DATABASE_NAME=qodda
AZURE_COSMOS_CONTAINER_NAME=classifications

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Azure Application Insights
AZURE_APPLICATION_INSIGHTS_CONNECTION_STRING=your-connection-string

# App Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=900000
